<% if @recipe.errors.any?%>
    <%= @recipe.errors.full_messages do |msg|%>
          <%= msg %>
        <% end %>
<% end %>       
<%= form_for recipe do |f| %>
  <div class="form-group">
    <%= f.label :title, 'TÃ­tulo' %>
    <%= f.text_field :title, class: 'form-control col-md-6' %>
  </div>
  <div class="form-group">
    <%= f.label :recipe_type_id, 'Tipo da Receita' %>
    <%= f.collection_select :recipe_type_id, @recipe_types, :id, :name,
                            {}, class: 'form-control col-md-6' %>
  </div>
  <div class="form-group">
    <%= f.label :cuisine_id, 'Cozinha' %>
    <%= f.collection_select :cuisine_id, @cuisines, :id, :name,
                            {}, class: 'form-control col-md-6' %>
  </div>
  <div class="form-group">
    <%= f.label :difficulty, 'Dificuldade' %>
    <%= f.text_field :difficulty, class: 'form-control col-md-6' %>
  </div>
  <div class="form-group">
    <%= f.label :cook_time, 'Tempo de Preparo' %>
    <%= f.number_field :cook_time, class: 'form-control col-md-6' %>
  </div>
  <div class="form-group">
    <%= f.label :ingredients, 'Ingredientes' %>
    <%= f.text_area :ingredients, class: 'form-control col-md-6' %>
  </div>
  <div class="form-group">
    <%= f.label :cook_method, 'Como Preparar' %>
    <%= f.text_area :cook_method, class: 'form-control col-md-6' %>
  </div>
  <div class="form-group">
      <%= f.label :image, 'Foto da Receita' %>
    <%= f.file_field :image %>
  </div>
  <div class="form-group">
    <%= f.submit 'Enviar', class: 'btn btn-primary' %>
  </div>
  
<% end %>
